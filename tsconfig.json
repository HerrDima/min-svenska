{
    "compilerOptions": {
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017",
            "es2018"
        ],
        "moduleResolution": "node",
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": false,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["www/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
